<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GuiAndroid.ViewModel"
             x:Class="GuiAndroid.Settings"
             Title="Settings"
             BackgroundImageSource="dark_theme.png">

    <ContentPage.BindingContext>
        <vm:AndVM />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="*,*,*,*">
		<Grid Grid.Row="0" RowDefinitions="*,*">
            <Label Grid.Row="0"
			    Text="Wybierz rozmiar przycisków"
			    FontSize="22"
                TextColor="LightGrey"
			    HorizontalOptions="Center"
			    VerticalOptions="Center"/>
            <Picker Grid.Row="1"
                    x:Name="RozmiarPrzycisków"
                    Title="{Binding Source={x:Reference RozmiarPrzycisków}, Path=SelectedItem}"
                    FontSize="80"
                    FontFamily="Bold"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    BackgroundColor="DarkOliveGreen"
                    >
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>50%</x:String>
                        <x:String>100%</x:String>
                        <x:String>150%</x:String>
                        <x:String>200%</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
        </Grid>

		<Grid Grid.Row="1" RowDefinitions="*,*,*">
            <Label Grid.Row="0" x:Name="RozmiarCzcionki"
				   Text="Rozmiar czcionki"
				   FontSize="22"
                   TextColor="LightGrey"
				   HorizontalOptions="Center"
				   VerticalOptions="Center"/>
            <Slider 
                Grid.Row="1"
                x:Name="sliderFont"
                Minimum="14" Maximum="24"
                Value="{Binding Font, Mode=TwoWay}"
                />
            <Label
                Grid.Row="2"
                x:Name="FontSizeInfo"
                FontSize="32"
                TextColor="LightGrey"
                HorizontalTextAlignment="Center"
                Text="{Binding Font, Mode=OneWay}"
                />
        </Grid>

		<Grid Grid.Row="2" RowDefinitions="*,*">
            <Label Grid.Row="0" x:Name="picker"
				   Text="Wybierz tlo:"
				   FontSize="22"
                   TextColor="LightGrey"
				   HorizontalOptions="Center"
				   VerticalOptions="Center"/>

            <Picker Grid.Row="1" x:Name="backgroundpicker"
					Title="Wybierz tło"
					SelectedItem="{Binding Background, Mode=TwoWay}"
                    FontSize="40"
                    FontFamily="Bold"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    BackgroundColor="DarkOliveGreen">
                <Picker.ItemsSource>

					<x:Array Type="{x:Type x:String}">
						<x:String>aaaa</x:String>
						<x:String>frog</x:String>
						<x:String>dark_theme</x:String>
					</x:Array>
				</Picker.ItemsSource>
			</Picker>
		</Grid>


		<Button Grid.Row="3" x:Name="Zapisz"
				Text="ZAPISZ"
				Command="{Binding Zapisz}" BackgroundColor="LimeGreen" 
                TextColor="Black" FontSize="40" FontFamily="Bold" 
                BorderColor="Black" BorderWidth="10" CornerRadius="90"/>
	</Grid>
