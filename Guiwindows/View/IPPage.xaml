<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Guiwindows.ViewModel"
             x:Class="Guiwindows.IPPage"
             Title="IPPage"
             BackgroundImageSource="steel.jpg">

    <ContentPage.BindingContext>
        <vm:IPVM />
    </ContentPage.BindingContext>
    <Grid RowDefinitions="*,*,*,*,*" BackgroundColor="LightGrey">
        <Label Grid.Row="1" Text="Type the address below into the app to attempt connection"
               VerticalOptions="Center"
               HorizontalOptions="Center" />
        <Label Grid.Row="2" Text="{Binding Path=Address, Mode=OneWay}"
               VerticalOptions="Center" 
               HorizontalOptions="Center" />
        <Label Grid.Row="3" Text="{Binding Path=State}"
               VerticalOptions="Center"
               HorizontalOptions="Center" />
    </Grid>
</ContentPage>