<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GuiAndroid.ViewModel"
             x:Class="GuiAndroid.MainPage"    
             BackgroundImageSource="aaaa.png">
    <ContentPage.Resources>
        <Style x:Key="ButtonSt" TargetType="Button">
            <Setter Property="CornerRadius" Value="90"/>
            <Setter Property="BorderWidth" Value="2"/>
            <Setter Property="BorderColor" Value="Black"/>
            <Setter Property="FontSize" Value="50"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>
    </ContentPage.Resources>
    <ContentPage.BindingContext>
        <vm:AndVM />
    </ContentPage.BindingContext>
    <Grid RowDefinitions="500,*" ColumnDefinitions="*">
        <Image Grid.Row="0" HeightRequest="500" WidthRequest="1500" Source="{Binding Path=Video, Mode=OneWay}"/>
        <Grid Grid.Row="1" Grid.Column="0" ColumnDefinitions="*,20,*" Padding="10">
            <Button  Grid.Column="0" BackgroundColor="Green" Style="{StaticResource ButtonSt}" Clicked="GreenButtonClicked"/>
            <Button  Grid.Column="2" BackgroundColor="Red" Style="{StaticResource ButtonSt}"  Clicked="RedButtonClicked"/>
        </Grid>
    </Grid>
</ContentPage>