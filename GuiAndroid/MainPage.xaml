<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GuiAndroid.ViewModel"
             x:Class="GuiAndroid.MainPage"    
             BackgroundImageSource="{Binding Background}">
    <ContentPage.Resources>
        <Style x:Key="ButtonSt" TargetType="Button">
            <Setter Property="CornerRadius" Value="90"/>
            <Setter Property="BorderWidth" Value="2"/>
            <Setter Property="BorderColor" Value="Black"/>
            <Setter Property="FontSize" Value="50"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="ScaleY" Value="{Binding Buttons, Mode=OneWay}"/>
        </Style>
    </ContentPage.Resources>
    <ContentPage.BindingContext>
        <vm:AndVM />
    </ContentPage.BindingContext>
    <Grid RowDefinitions="500,*" ColumnDefinitions="*">
        <Image Grid.Row="0" HeightRequest="900" WidthRequest="1600" Source="{Binding Path=Video, Mode=OneWay}"/>
        <Grid Grid.Row="1" Grid.Column="0" ColumnDefinitions="*,90,*" Padding="10">

            <Button x:Name="green" ImageSource="up.png" Grid.Column="0" BackgroundColor="{AppThemeBinding Light=Green, Dark=SeaGreen}" Style="{StaticResource ButtonSt}" Clicked="GreenButtonClicked"/>
            <Button x:Name="grey" ImageSource="connect.png" Grid.Column="1" BackgroundColor="{AppThemeBinding Light=LightGrey, Dark=Grey}" Style="{StaticResource ButtonSt}" Clicked="GreyButtonClicked"/>
            <Button x:Name="red"  ImageSource="down.png" Grid.Column="2" BackgroundColor="{AppThemeBinding Light=Red, Dark=Maroon}" Style="{StaticResource ButtonSt}"  Clicked="RedButtonClicked"/>
        </Grid>
    </Grid>
</ContentPage>