<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiGui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiGui"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Switchboard">
            <ShellContent Icon="on.png"  Title="SeeTaLater" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>
        <Tab Title="View">
            <ShellContent Icon="camera.png" Title="SeeYaLater" ContentTemplate="{DataTemplate local:Camera}" Route="Camera" />
        </Tab>
        <Tab Title="Settings">
            <ShellContent  Icon="gear.png" Title="SeeYaLater" ContentTemplate="{DataTemplate local:Settings}" Route="Settings" />
        </Tab>
        <Tab Title="Credits">
            <ShellContent  Icon="books.png" Title="SeeYaLater" ContentTemplate="{DataTemplate local:Credits}" Route="Credits" />
        </Tab>
    </TabBar>
</Shell>
