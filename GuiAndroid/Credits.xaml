<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GuiAndroid.ViewModel"
             x:Class="GuiAndroid.Credits"
             Title="Credits"
             BackgroundImageSource="{AppThemeBinding Light=zielen.jpg, Dark=dark_theme.png}"
             >
    <ContentPage.BindingContext>
        <vm:AndVM />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <Style x:Name="autorzy" x:Key="authors" TargetType="Label">
            <Setter Property="VerticalTextAlignment" Value="Center" />
            <Setter Property="HorizontalTextAlignment" Value="Center" />
            <Setter Property="FontSize" Value="{Binding C}" />
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="FontAutoScalingEnabled" Value="True"/>
            <Setter Property="TextColor" Value="{AppThemeBinding Light=DarkGray, Dark=White}"/>
        </Style> 
    </ContentPage.Resources>
    
