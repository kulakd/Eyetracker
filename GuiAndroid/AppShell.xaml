<?xml version="1.0" encoding="UTF-8" ?>

<Shell
    x:Class="GuiAndroid.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GuiAndroid"
    Shell.NavBarIsVisible="False"
    TabBarBackgroundColor="Black"
    TabBarUnselectedColor="Grey"
    >

    <TabBar x:Name="tadbar">
        <Tab Title="KAMERA" Icon="camera.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>
        <Tab Title="USTAWIENIA"  Icon="gear.png">
            <ShellContent ContentTemplate="{DataTemplate local:Settings}" Route="Settings" />
        </Tab>
        <Tab Title="ZESPÓŁ" Icon="books.png">
            <ShellContent ContentTemplate="{DataTemplate local:Credits}" Route="Credits" />
        </Tab>
    </TabBar>
  
</Shell>