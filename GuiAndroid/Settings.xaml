<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GuiAndroid.ViewModel"
             x:Class="GuiAndroid.Settings"
             Title="Settings"
             BackgroundImageSource="aaaa.png">

    <ContentPage.BindingContext>
        <vm:AndVM />
    </ContentPage.BindingContext>
	<Grid RowDefinitions="*,*,*,*">
		<Grid Grid.Row="1" RowDefinitions="*,*">
			<Label x:Name="RozmiarPrzycisków"
			Text="Rozmiar przycisków"
			FontSize="18"
			HorizontalOptions="Center"
			VerticalOptions="Center">Rozmiar Przeciskow</Label>
			<Grid Grid.Row="2" ColumnDefintions="*,*,*,*">
				<Button x:Name="BtnTiny">0.5x</Button>
				<Button x:Name="BtnSmall">x</Button>
				<Button x:Name="BtnMedium">1.5x</Button>
				<Button x:Name="BtnLarge">
					x2</Button>
				</Grid>
		</Grid>

		<Grid Grid.Row="2" RowDefinitions="*,*">
			<Label Grid.Row="1" x:Name="RozmiarCzcionki"
				   Text="Rozmiar czcionki"
				   FontSize="18"
				   HorizontalOptions="Center"
				   VerticalOptions="Center">Rozmiar fontu</Label>
			<Slider Grid.Row="2"></Slider>
		</Grid>

		<Grid Grid.Row="3" RowDefinitions="*,*">
			<Label Grid.Row="1" x:Name="picker"
				   Text="Rozmiar czcionki"
				   FontSize="18"
				   HorizontalOptions="Center"
				   VerticalOptions="Center">Wybierz tlo:</Label>

			<Picker Grid.Row="2" x:Name="backgroundpicker"
					Title="Wybierz tło"
					SelectedItem="{Binding Background, Mode=TwoWay}">
				<Picker.ItemsSource>
					<x:Array Type="{x:Type x:String}">
						<x:String>aaaa</x:String>
						<x:String>frog</x:String>
						<x:String>dark_theme</x:String>
					</x:Array>
				</Picker.ItemsSource>
			</Picker>
		</Grid>

		<Button Grid.Row="4" x:Name="Zapisz"
				Text="Zapisz"
				Command="{Binding Zapisz}"/>
	</Grid>
